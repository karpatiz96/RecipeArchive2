@model RecipeArchive.Models.Ingredient

@{
    ViewData["Title"] = "Create";
}

<h2>New Ingredient</h2>
<hr />
<div class="form-horizontal">
    <form asp-action="Create" asp-controller="Ingredients" asp-antiforgery="true" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="MealID" class="form-control" value="@ViewBag.MealID" />
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Quantity" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Quantity" class="form-control" placeholder="Quantity" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </form>
</div>

<div>
    <a asp-controller="Meals" asp-action="Details" asp-route-id="@ViewBag.MealID">Back to Meal</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
