@model RecipeArchive.Models.DataViewModels.FilterViewModel

@{
    ViewData["Title"] = "Filter";
}
<h2>Filter</h2>
<hr />
<div class="form-horizontal">
    <form asp-action="Search" asp-controller="Meals" method="get">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MealType" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="MealType" class="form-control" asp-items="ViewBag.mealTypes"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Difficulty" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="Difficulty" asp-items="ViewBag.difficultyStates" class="form-control"></select>
                <span asp-validation-for="Difficulty" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MakeTime" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="MakeTime" class="form-control" placeholder="Time in minutes" />
                <span asp-validation-for="MakeTime" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    </form>
</div>