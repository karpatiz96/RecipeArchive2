@model RecipeArchive.Models.DataViewModels.MealViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>View Meal</h2>
<hr />
<div class="media">
    <div class="media-left">
        <a href="#">
            <img class="media-object" src="~/images/imgMeal/@Model.Picture" width="100" height="100">
        </a>
    </div>
    <div class="media-body">
        <div class="container">
        <div class="row">
            <div class="col-md-2">
                <label>Name @Model.Name</label>
            </div>
            <div class="col-md-2">
                <label>Time @Model.MakeTime</label>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <label>Type @Model.MealTypeName</label>
            </div>
            <div class="col-md-2">
                <label>Difficulty </label>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <label>Stars @Model.Stars</label>
            </div>
        </div>
        </div>
    </div>
</div>

<h3>Preparation</h3>
<textarea asp-for="Description" rows="5" cols="40" class="form-control" readonly >@Model.Description</textarea>

<h3>Ingredients</h3>

@foreach (var ingredient in Model.Ingredients)
{
<div class="row">
    <div class="col-md-3">
        <label>Name @ingredient.Name</label>
    </div>
    <div class="col-md-3">
        <label>Quantity @ingredient.Quantity</label>
    </div>
    <div class="col-md-6">
        <a asp-action="Edit" asp-controller="Ingredients" asp-route-id="@ingredient.IngredientID" class="btn btn-default">Edit</a>
        <a asp-action="Delete" asp-controller="Ingredients" asp-route-id="@ingredient.IngredientID" class="btn btn-default">Delete</a>
    </div>
</div>
}
<hr/>
<div class="row">
    <div class="col-md-offset-8 col-md-4">
        <a asp-action="Create" asp-controller="Ingredients" asp-route-mealid="@Model.MealID" class="btn btn-default">Add</a>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.MealID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
